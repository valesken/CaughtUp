<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/edit_profile_picture_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/edit_profile_photo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/male_user_icon"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:background="#7FD3D3D3"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/edit_profile_photo_image_view">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/camera_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_photo_text" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/edit_profile_personal_info_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/edit_profile_username_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/edit_profile_sex_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sex"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/edit_profile_age_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/edit_profile_full_name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/edit_profile_location_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/edit_profile_change_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_password"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/edit_profile_about_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="6"
        android:maxLines="10"
        android:gravity="top|left"
        android:hint="About me"
        android:background="@android:color/white"
        android:scrollbars="vertical"
        android:layout_gravity="center_horizontal" />

</LinearLayout>